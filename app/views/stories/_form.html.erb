<%= form_for @story do |f| %>

  <% if @story.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@story.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @story.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_area :title %>
  </p>

  <p>
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </p>

  <p>
    <%= f.label :excerpt %><br>
    <%= f.text_area :excerpt %>
  </p>
  <p>
    <%= f.label :tag_list, "Tags (separated by commas)" %><br>
    <%= f.text_field :tag_list %>
  </p>
  <p>
    <%= f.label :picture_list, "Picture URLs (separated by commas)" %><br>
    <%= f.text_field :picture_list %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
